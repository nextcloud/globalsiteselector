<phpunit bootstrap="bootstrap.php"
		 verbose="true"
		 convertDeprecationsToExceptions="true"
		 timeoutForSmallTests="900"
		 timeoutForMediumTests="900"
		 timeoutForLargeTests="900"
		>
	<testsuite name='Nextcloud - Global Site Selector'>
		<directory suffix='Test.php'>.</directory>
		<exclude>./stubs/</exclude>
	</testsuite>

	<!-- filters for code coverage -->
	<filter>
		<whitelist>
			<directory suffix=".php">../../../globalsiteselector</directory>
			<exclude>
				<directory suffix=".php">../../../globalsiteselector/l10n</directory>
				<directory suffix=".php">../../../globalsiteselector/lists</directory>
				<directory suffix=".php">../../../globalsiteselector/tests/unit</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<!-- and this is where your report will be written -->
		<log type="coverage-clover" target="./clover.xml"/>
	</logging>
</phpunit>
